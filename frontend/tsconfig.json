{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "noEmit": true,
    "incremental": true,

    "target": "es2020",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "isolatedModules": true,
    "typeRoots": [
        "src/typings",
        "node_modules/@types"
    ]
  },
  "include": ["src"]
}
